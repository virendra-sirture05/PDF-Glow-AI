// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================
// Users Table
// ========================== 
model User {
  id                    String    @id @default(uuid())
  clerkUserId           String    @unique
  email                 String    @unique
  created_at            DateTime  @default(now())
  updated_at            DateTime  @updatedAt
  full_name             String?
  customer_id           String?   @unique
  price_id              String?
  status                String    @default("inactive")
  subscription_ends_at  DateTime? // ðŸ”¥ NEW: Subscription expiry date

  // Relations
  pdf_summaries PdfSummary[]
  payments      Payment[]
}

// ==========================
// PDF Summaries Table
// ==========================
model PdfSummary {
  id               String   @id @default(uuid())
  user_id          String
  original_file_url String
  summary_text     String
  status           String   @default("completed")
  title            String?
  file_name        String?
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  // Relation
  user User @relation(fields: [user_id], references: [id])
}

// ==========================
// Payments Table
// ==========================
model Payment {
  id                    String   @id @default(uuid())
  amount                Int      // Amount in paise (â‚¹19.99 = 1999 paise)
  currency              String   @default("INR")
  status                String   // created, authorized, captured, failed
  razorpay_order_id     String   @unique
  razorpay_payment_id   String?  @unique
  razorpay_signature    String?
  plan_id               String   // "basic" or "pro"
  user_email            String
  created_at            DateTime @default(now())
  updated_at            DateTime @updatedAt

  // Relation to Users (by email)
  user User @relation(fields: [user_email], references: [email])
}